# School Management System Environment Variables
# Copy this file to .env and fill in your values

# ====================================
# DATABASE CONFIGURATION
# ====================================
# Local development (PostgreSQL)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/school_management"

# Production database URLs (set via Vercel dashboard)
# DATABASE_URL="postgresql://user:password@host:port/database"
# DATABASE_DIRECT_URL="postgresql://user:password@host:port/database"
# SHADOW_DATABASE_URL="postgresql://user:password@host:port/shadow_db"

# ====================================
# SECURITY CONFIGURATION
# ====================================
# Generate strong secrets with: openssl rand -base64 32
# CRITICAL: Change these in production!
JWT_SECRET="your-super-secret-jwt-key-minimum-32-characters"
JWT_EXPIRES_IN="8h"
NEXTAUTH_SECRET="your-nextauth-secret-minimum-32-characters"

# Password security
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8
SESSION_TIMEOUT_HOURS=8

# ====================================
# VERCEL BLOB STORAGE
# ====================================
# Get from: Vercel Dashboard -> Storage -> Blob
VERCEL_BLOB_READ_WRITE_TOKEN="vercel_blob_rw_xxxxxxxxxx"

# ====================================
# APPLICATION SETTINGS
# ====================================
NEXTAUTH_URL="http://localhost:3000"
NODE_ENV="development"
APP_NAME="School Management System"
APP_VERSION="1.0.0"

# ====================================
# RATE LIMITING
# ====================================
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# ====================================
# MONITORING (Optional)
# ====================================
# Sentry DSN for error tracking
# SENTRY_DSN="https://xxx@xxx.ingest.sentry.io/xxx"

# ====================================
# EMAIL CONFIGURATION (Future)
# ====================================
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT=587
# SMTP_USER="your-email@gmail.com"
# SMTP_PASS="your-app-password"

# ====================================
# DEPLOYMENT NOTES
# ====================================
# For Vercel deployment:
# 1. Set environment variables in Vercel dashboard
# 2. Use strong, randomly generated secrets
# 3. Enable database connection pooling
# 4. Set up monitoring and alerts